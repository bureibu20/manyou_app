<h1>タスク一覧</h1>
<br>
<%= form_with(model: @task, method: :get, local: true, ) do |form| %>
  <%= form.label :'タスク名' %>
  <%= form.text_field :search_title, placeholder:"何かお探しですか？" %>
  <%= form.label :'ステータス' %>
  <%= form.select :search_status, Task.statuses.keys {}%>
  <%= form.submit '検索' , name: 'search', class:"btn btn-warning" %>
  <%= link_to 'Task一覧を確認する', tasks_path %>
<% end %>
<br>
<br>

<p id="notice"><%= notice %></p>
<div class="container">
  <div>
    <%= link_to '新規投稿', new_task_path %>
  </div>
</div>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th><%= link_to "終了期限▼",tasks_path(sort_expired: "true") %></th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="index_page">
  <%= paginate @tasks %>
</div>
